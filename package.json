{
  "name": "stylelint-config-yoctol",
  "description": "Yoctol's stylelint config",
  "license": "MIT",
  "author": "Yoctol Info.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoctol/stylelint-config-yoctol.git"
  },
  "version": "1.0.2",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV=production babel src -d lib",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "lint": "eslint src .babelrc.js",
    "prepublishOnly": "npm run build",
    "test": "npm run lint && npm run testonly",
    "testonly": "jest",
    "testonly:watch": "jest --watch",
    "preversion": "npm run test"
  },
  "dependencies": {
    "css-property-sort-order-smacss": "^2.1.2",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1"
  },
  "peerDependencies": {
    "stylelint": "^9.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-yoctol-base": "^0.16.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "prettier-package-json": "^1.6.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0"
  },
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "verbose": true,
    "transformIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "resetModules": true,
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    ".babelrc": [
      "prettier --write",
      "git add"
    ]
  }
}
